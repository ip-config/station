{
  "manifest_version": 2,
  "name": "Station CX",
  "version": "1.0.0",

  "options_page": "index.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "icon-32.png"
  },

  "icons": {
    "128": "icon-128.png"
  },

  "permissions": ["storage"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
